{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--host", "127.0.0.1", "--port", "8000"],
      "jinja": true
    },
    {
      "name": "Run Storefront (8001)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["store_server:app", "--host", "127.0.0.1", "--port", "8001"],
      "jinja": true
    }
  ]
}
